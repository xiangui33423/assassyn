Bootstrap: docker
From: rust:1.82

%post
    rustup component add rustfmt
    
    apt-get update
    apt-get install -y --no-install-recommends \
        zsh python3-pip python3-dev python3-venv pybind11-dev \
        python-is-python3 git autoconf build-essential flex bison \
        libfl2 libfl-dev libexpat1-dev gettext perl \
        libgoogle-perftools-dev numactl perl-doc help2man \
        cmake ninja-build cargo && apt-get clean && rm -rf /var/lib/apt/lists/*

%runscript
    exec "\$@"

%test
    #!/bin/zsh
    echo "=== Testing base container ==="
    echo "Checking Rust installation..."
    rustc --version
    echo "Checking Python installation..."
    python3 --version
    echo "Checking Git installation..."
    git --version
    echo "Base container test completed."
